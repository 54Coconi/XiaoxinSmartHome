<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="online.letmesleep.iotbasedhome.IntroduceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <LinearLayout
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:id="@+id/layout_login_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/button_login_register"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_text_background_login"
                    android:padding="15dp"
                    android:text="登录注册"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_login"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#37c19e"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:text="登录"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text_register"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#37c19e"
                            android:text="注册"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_follow_user"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#37c19e"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:text="设备跟随"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@id/layout_login_register"
                android:gravity="right"
                android:id="@+id/layout_application_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_add_application"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#a721c8"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:text="添加"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text_edit_application"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a721c8"
                            android:text="编辑"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_remove_application"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a721c8"
                            android:text="移    除"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_setting_application"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#a721c8"
                            android:text="设置"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_share_application"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a721c8"
                            android:text="分享"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_qrcode_application"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a721c8"
                            android:text="二维码"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/button_management_application"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_text_background_application"
                    android:padding="15dp"
                    android:text="设备管理"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


            </LinearLayout>
            <LinearLayout
                android:gravity="left"
                android:layout_below="@id/layout_application_management"
                android:layout_marginTop="15dp"
                android:id="@+id/layout_light_control"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_control_application"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_text_background_light"
                    android:padding="15dp"
                    android:text="设备控制"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_control_jdq"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#7898f9"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:text="继电器"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text_control_led"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#7898f9"
                            android:text="LED灯"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_control_by_voice"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#7898f9"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:text="语音控制"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/layout_light_control"
                android:id="@+id/layout_temp_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text_alert_high_temp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#a751f8"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:text="高温预警"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/text_alert_low_temp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a751f8"
                            android:text="低温预警"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_temp"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a751f8"
                            android:text="温 度"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_alert_high_humi"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#a751f8"
                            android:text="高湿预警"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_alert_low_humi"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a751f8"
                            android:text="低湿预警"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_humi"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a751f8"
                            android:text="湿 度"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/button_humi_temp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_text_background_acc"
                    android:padding="15dp"
                    android:text="环境感知"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


            </LinearLayout>
            <LinearLayout
                android:gravity="left"
                android:layout_below="@id/layout_temp_humidity"
                android:id="@+id/layout_local_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_speak_transalte"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_text_background_pri"
                    android:padding="15dp"
                    android:text="发音与翻译"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#e87b32"
                            android:text="粤 语"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#e87b32"
                            android:text="台湾话"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#e87b32"
                            android:text="四川话"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#e87b32"
                            android:text="小 新"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#e87b32"
                            android:text="湖南话"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#e87b32"
                            android:text="河南话"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:layout_below="@id/layout_local_language"
                android:id="@+id/layout_chat_tuling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tuling_chat_1"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#a751f8"
                            android:maxLines="1"
                            android:padding="8dp"
                            android:text="聊天"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tuling_chat_2"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_margin="4dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a751f8"
                            android:text="讲笑话"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/tuling_chat_3"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a751f8"
                            android:text="询问日期"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tuling_chat_4"
                            android:gravity="center"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="4dp"
                            android:background="#a751f8"
                            android:text="唤醒"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/tuling_chat_5"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a751f8"
                            android:text="讲故事"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/tuling_chat_6"
                            android:gravity="center"
                            android:layout_margin="4dp"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#a751f8"
                            android:text="播报天气"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/button_tuling_chat"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/introduce_text_background_acc"
                    android:padding="15dp"
                    android:text="图灵机器人"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


            </LinearLayout>
            <Button
                android:id="@+id/finish_introduce"
                android:layout_marginTop="8dp"
                android:layout_below="@id/layout_chat_tuling"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:text="语音唤醒与控制APP"
                android:background="@drawable/introduce_text_background_application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="bottom|center"
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:id="@+id/layout_start_up"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginBottom="50dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <TextView
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="智能家居系统"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:gravity="top|center"
                android:id="@+id/layout_start_down"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="VERSION 1.0"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
